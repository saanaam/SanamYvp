<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splash_nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment android:id="@+id/splashFragment"
        android:label="splash_fragment"
        android:name="com.nar.bimito.presentation.splash.SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splash_to_main"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment android:id="@+id/mainFragment"
        android:label="main_fragment"
        android:name="com.nar.bimito.presentation.splash.main.MainFragment"
        tools:layout="@layout/fragment_main">
    </fragment>

</navigation>