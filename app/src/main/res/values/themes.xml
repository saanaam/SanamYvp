<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BimitoCustomer" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.BimitoCustomer.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BimitoCustomer.AppBarOverlay" parent="Theme.AppCompat.DayNight.NoActionBar" />

    <style name="Theme.BimitoCustomer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>